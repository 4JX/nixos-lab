{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "semanticCommits": "enabled",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":separateMajorReleases",
    "docker:enableMajor",
    "docker:pinDigests",
    "github>4JX/nixos-lab//.github/renovate/autoMerge.json",
    "github>4JX/nixos-lab//.github/renovate/commitMessage.json",
    "github>4JX/nixos-lab//.github/renovate/ignore.json",
    "github>4JX/nixos-lab//.github/renovate/labels.json",
    "github>4JX/nixos-lab//.github/renovate/semanticCommits.json"
  ],
  "schedule": [
    "at any time"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "rebaseWhen": "auto",
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^home-server/.*\\.nix$/"
      ],
      "matchStrings": [
        "image *= *\"(?<depName>.*?):(?<currentValue>.*?)(@(?<currentDigest>sha256:[a-f0-9]+))?\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "commitBodyTable": true,
  "rollbackPrs": true
}
